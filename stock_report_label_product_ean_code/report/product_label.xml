<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_product_label_ean_code">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div style="width:100%;">
                    <t t-foreach="o.move_lines" t-as="move">
                        <t t-if="move.product_id.ean_code">
                            <t
                                t-set="line_qty"
                                t-value="[move] * int(move.product_uom_qty)"
                            />

                            <t t-foreach="line_qty" t-as="line">
                                <div class="page" id="product_label_page">
                                    <t
                                        t-call="stock_report_label_product_ean_code.report_product_label_document_ean_code"
                                        t-lang="o.partner_id.lang"
                                    />
                                </div>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_product_label_document_ean_code">
      <table class="table table-bordered">
          <tr>
            <div
                    class="text-center align-middle row"
                    style="height: 120px; background: lightgrey; margin-bottom: 30px; font-size: 20px;"
                >
                <span t-esc="line.product_id.display_name" style="margin-left: 4px;" />

            </div>
          </tr>
          <tr>
            <div
                    class="text-center align-middle row"
                    style="height: 103px; font-size: 15px; width: 400px;"
                >
                <img
                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.ean_code, 700, 150)"
                        style="width:100%;height:4rem"
                        alt="Barcode"
                    />
                <span t-esc="line.product_id.ean_code" />
            </div>
          </tr>
      </table>
    </template>
</odoo>
