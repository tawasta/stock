<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_tree_expected_date" model="ir.ui.view">
        <field name="name">stock.move.tree.expected.date</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="date_expected" />
            </xpath>
        </field>
    </record>
    <record id="view_picking_form_expected_date" model="ir.ui.view">
        <field name="name">stock.picking.form.expected.date</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
        expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']"
        position="after"
      >
                <field name="date_expected" />
            </xpath>
        </field>
    </record>
</odoo>
