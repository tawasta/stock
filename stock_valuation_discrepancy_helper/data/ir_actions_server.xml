<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_sync_remaining_qty" model="ir.actions.server">
        <field name="name">Sync remaining quantity</field>
        <field name="model_id" ref="stock_account.model_stock_valuation_layer" />
        <field name="groups_id" eval="[(4, ref('base.group_system'))]" />
        <field
            name="binding_model_id"
            ref="stock_account.model_stock_valuation_layer"
        />
        <field name="state">code</field>
        <field name="code">records.action_sync_remaining_qty()</field>
    </record>

    <record id="action_clear_remaining_qty" model="ir.actions.server">
        <field name="name">Clear remaining quantity</field>
        <field name="model_id" ref="stock_account.model_stock_valuation_layer" />
        <field name="groups_id" eval="[(4, ref('base.group_system'))]" />
        <field
            name="binding_model_id"
            ref="stock_account.model_stock_valuation_layer"
        />
        <field name="state">code</field>
        <field name="code">records.action_clear_remaining_qty()</field>
    </record>

    <record id="action_reset_unit_value" model="ir.actions.server">
        <field name="name">Reset unit values</field>
        <field name="model_id" ref="stock_account.model_stock_valuation_layer" />
        <field name="groups_id" eval="[(4, ref('base.group_system'))]" />
        <field
            name="binding_model_id"
            ref="stock_account.model_stock_valuation_layer"
        />
        <field name="state">code</field>
        <field name="code">records.action_reset_unit_value()</field>
    </record>
</odoo>
