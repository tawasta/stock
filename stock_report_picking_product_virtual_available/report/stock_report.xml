<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <th name="th_barcode" position="after">
            <th id="th_virtual_qty">
                <strong>Forecast</strong>
            </th>
        </th>

        <xpath expr="//td[@t-if='has_barcode']" position="after">
            <td id="td_virtual_qty">
                <!-- with_context() works because product.product model uses context in its
                _get_domain_locations() method -->
                <span
                    t-field="move.product_id.with_context(location=o.location_id.name).virtual_available"
                />
            </td>
        </xpath>
    </template>
</odoo>
