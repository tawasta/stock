<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_inventory_line_tree" model="ir.ui.view">
        <field name="name">stock.inventory.line.tree.default_code</field>
        <field name="model">stock.inventory.line</field>
        <field name="inherit_id" ref="stock.stock_inventory_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute
                    name="default_order"
                >location_id,product_default_code,product_id</attribute>
            </xpath>

            <field name="product_id" position="before">
                <field
                    name="product_default_code"
                    optional="hide"
                    readonly="context.get('default_product_id', False)"
                    attrs="{'readonly': ['|', ('is_editable', '=', False), ('state', '!=', 'confirm')]}"
                />
            </field>
        </field>
    </record>
</odoo>
