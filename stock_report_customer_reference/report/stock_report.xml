<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_delivery_document_client" inherit_id="sale_stock.report_delivery_document_inherit_sale_stock">
        <xpath expr="//div[@t-if='o.sudo().sale_id.client_order_ref']" position="attributes">
            <attribute name="t-if">1 == 0</attribute>
        </xpath>
    </template>

    <template id="report_delivery_document" inherit_id="stock_report_element_sizes.report_delivery_document">
        <div id="stock_deliveryslip_informations" position="inside">
            <div t-if="o.sudo().sale_id.client_order_ref" class="col-auto mw-100 mb-2">
                <span><strong>Customer Reference:</strong></span>
                <p class="m-0" t-field="o.sudo().sale_id.client_order_ref"/>
            </div>
        </div>
    </template>
</odoo>
