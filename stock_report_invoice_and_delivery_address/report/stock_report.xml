<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="before"
        >
            <div class="row pull-left col-6" style="float:left;">
                <div id="invoice_address">
                    <strong style="display: block;">INVOICE ADDRESS:</strong>
                    <t t-if="o.sudo().sale_id.partner_invoice_id">
                        <div
                            t-field="o.sudo().sale_id.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                        />
                    </t>
                </div>
            </div>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="before"
        >
            <strong
                style="display: block; float:right;"
                class="row pull-right col-6 mr-1"
            >DELIVERY ADDRESS:</strong>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="attributes"
        >
            <attribute name="class">row pull-right col-6 mb-4 mr-1</attribute>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="attributes"
        >
            <attribute name="style">float:right;</attribute>
        </xpath>

        <xpath expr="//span[@t-field='o.name']" position="attributes">
            <attribute
                name="style"
            >display: inline-block; padding-top: 25px;</attribute>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="attributes">
            <attribute name="t-set" />
        </xpath>
    </template>
</odoo>
