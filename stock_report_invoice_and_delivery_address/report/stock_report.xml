<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="before"
        >
            <div style="float:left; padding-right: 20px;" class="col-6">
                <div id="invoice_address">
                    <strong>INVOICE ADDRESS:</strong>
                    <t t-if="o.sudo().sale_id.partner_invoice_id">
                        <div
                            t-field="o.sudo().sale_id.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                        />
                    </t>
                </div>
            </div>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="before"
        >
            <strong style="float:left;" class="col-5">DELIVERY ADDRESS:</strong>
        </xpath>

        <xpath expr="//span[@t-field='o.name']" position="attributes">
            <attribute
                name="style"
            >float:left; padding-top: 15px; width: 100%; padding-bottom: 15px;</attribute>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="attributes"
        >
            <attribute name="style">float:left;</attribute>
        </xpath>

        <xpath
            expr="//t[@name='partner_header']//div[@t-esc='partner']"
            position="attributes"
        >
            <attribute name="class">col-5</attribute>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="attributes">
            <attribute name="t-set" />
        </xpath>
    </template>
</odoo>
