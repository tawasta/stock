<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <th name="th_from" position="before">
            <th id="th_available_qty">
                <strong>In stock</strong>
            </th>
        </th>

        <xpath expr="//span[@t-esc='ml.location_id.display_name']/.." position="before">
            <td id="td_available_qty">
                <t
                    t-set="ava_qty"
                    t-value="ml.product_id.stock_quant_ids.filtered(lambda q: q.location_id == o.location_id)"
                />
                <span t-esc="ava_qty and ava_qty[0].available_quantity or 0" />
            </td>
        </xpath>
    </template>
</odoo>
