<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.delay.reason</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="delay_reason" position="after">
                <field
                    name="delay_details"
                    attrs="{'readonly': [('state', '=', 'cancel')], 'invisible': [('delay_reason', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
