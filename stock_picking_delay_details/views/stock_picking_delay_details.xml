<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id='delay_details_act' model='ir.actions.act_window'>
        <field name="name">Delay Details</field>
        <field name="res_model">stock.picking.delay.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Delay Details"
        id="delay_details_menu"
        parent="stock.menu_stock_config_settings"
        action="delay_details_act"
    />

    <record id="delay_details_view_form" model="ir.ui.view">
        <field name="name">Delay Details</field>
        <field name="model">stock.picking.delay.detail</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="delay_reason" />
                </group>
            </form>
        </field>
    </record>

    <record id="delay_details_view_tree" model="ir.ui.view">
        <field name="name">Delay Details</field>
        <field name="model">stock.picking.delay.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="delay_reason" />
            </tree>
        </field>
    </record>
</odoo>
