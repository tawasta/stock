<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="delay_reason_view_form" model="ir.ui.view">
        <field name="name">Delay Reasons</field>
        <field name="model">stock.picking.delay.reason</field>
        <field
            name="inherit_id"
            ref="stock_picking_delay_reason.delay_reason_view_form"
        />
        <field name="arch" type="xml">
            <form>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="delay_details">
                        <tree>
                            <field name="name" />
                        </tree>
                    </field>
                </xpath>
            </form>
        </field>
    </record>
</odoo>
