<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.return.sudo.button</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//button[@name='%(stock.act_stock_return_picking)d']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='button_validate'][1]" position="after">
                <button
                    name="sudo_button_validate"
                    string="Validate"
                    attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False)]}"
                    type="object"
                    groups="base.group_user"
                    class="oe_highlight"
                />

                <button
                    name="sudo_button_validate"
                    string="Validate"
                    attrs="{'invisible': ['|', ('state', 'not in', ('waiting', 'confirmed')), ('show_validate', '=', False)]}"
                    type="object"
                    groups="base.group_user"
                    class="o_btn_validate"
                />
            </xpath>

            <xpath
                expr="//button[@name='%(stock.act_stock_return_picking)d']"
                position="after"
            >
                <button
                    name="sudo_open_return_picking_view"
                    string="Return"
                    attrs="{'invisible': [('state', '!=', 'done')]}"
                    type="object"
                    groups="base.group_user"
                />
            </xpath>
        </field>
    </record>
</odoo>
