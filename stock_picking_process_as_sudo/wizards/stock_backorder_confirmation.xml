<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_backorder_confirmation" model="ir.ui.view">
        <field name="name">stock_backorder_confirmation.run.functions.as.sudo</field>
        <field name="model">stock.backorder.confirmation</field>
        <field name="inherit_id" ref="stock.view_backorder_confirmation" />
        <field name="arch" type="xml">
            <button name="process" position="after">
                <button
                    name="sudo_process"
                    string="Create Backorder"
                    type="object"
                    class="oe_highlight"
                />
            </button>
            <button name="process" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="process_cancel_backorder" position="after">
                <button
                    name="sudo_process_cancel_backorder"
                    string="No Backorder"
                    type="object"
                    class="btn-primary"
                />
            </button>
            <button name="process_cancel_backorder" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
        </field>
    </record>
</odoo>
