<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="view_order_form" model="ir.ui.view">
		<field name="name">sale.order.form.force.unreserve</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
            <field name="payment_term_id" position="before">
                <field name="force_unreserve" readonly="1"/>
		    </field>
		</field>
	</record>

	<record id="view_order_form_group" model="ir.ui.view">
		<field name="name">sale.order.form.force.unreserve.group</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="stock_picking_unreserve_automatically.view_order_form" />
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
		<field name="arch" type="xml">
            <field name="force_unreserve" position="attributes">
                <attribute name="readonly">0</attribute>
		    </field>
		</field>
	</record>
</odoo>
