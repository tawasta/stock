<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.base.view.form.force.unreserve</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_delivery']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="force_unreserve">
                    <div class="o_setting_left_pane">
                        <field name="force_unreserve"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="force_unreserve"/>
                        <div class="text-muted">
                            Force unreservation of deliveries
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
