<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock_report_element_sizes.report_delivery_document"
    >
        <thead id="header_table_thead" position="inside">
            <t t-if="o.sudo().sale_id and o.sudo().sale_id.year_of_shipment">
                <th name="td_year_of_shipment">
                    <strong>Year of shipment</strong>
                </th>
            </t>
        </thead>

        <tbody id="header_table_tbody" position="inside">
            <t t-if="o.sudo().sale_id and o.sudo().sale_id.year_of_shipment">
                <td name="td_year_of_shipment">
                    <span t-field="o.sudo().sale_id.year_of_shipment" />
                </td>
            </t>
        </tbody>
    </template>

    <record id="report_delivery_document" model="ir.ui.view">
        <field name="priority">25</field>
    </record>
</odoo>
