<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <xpath expr="//span[@t-field='ml.product_id.display_name']" position="before">
            <span t-field="ml.product_id.default_code" />
        </xpath>
        <xpath
            expr="//span[@t-field='ml.product_id.display_name']"
            position="attributes"
        >
            <attribute name="class" separator=" " add="d-none" />
        </xpath>
        <xpath
            expr="//span[@t-field='ml.product_id.description_picking']"
            position="attributes"
        >
            <attribute name="class" separator=" " add="d-none" />
        </xpath>
    </template>
</odoo>
