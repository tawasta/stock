<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_product_label">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div style="width:100%;">
                    <t t-foreach="o.move_lines" t-as="line">
                        <div class="page" id="product_label_page">
                            <t
                                t-call="stock_report_label_product.report_product_label_document"
                                t-lang="o.partner_id.lang"
                            />
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="report_product_label_document">
        <div style=" width: 100%; height: 51mm">
            <div
                class="text-center align-middle row"
                style="height: 22mm; background: lightgrey; margin-bottom: 5mm; font-size: 3.6mm;"
            >
                <span t-esc="line.product_id.display_name" style="margin-left: 1mm;" />
            </div>
            <div
                class="text-center align-middle row"
                style="height: 22mm; font-size: 3mm; width: 76mm;"
            >
                <t t-if="line.product_id.barcode">
                    <img
                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.barcode, 700, 150)"
                        style="width:100%;height:3.4rem"
                        alt="Barcode"
                    />
                    <span t-esc="line.product_id.barcode" />
                </t>
            </div>
        </div>
    </template>
</odoo>
