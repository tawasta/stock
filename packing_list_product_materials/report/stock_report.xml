<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[@name='stock_move_table']/tbody/tr" position="replace">
            <t t-foreach="lines" t-as="move">
                <tr>
                    <td>
                        <span t-field="move.product_id" />
                        <p t-if="move.description_picking != move.product_id.name">
                            <span t-field="move.description_picking" />
                        </p>
                    </td>
                    <td>
                        <span t-field="move.product_uom_qty" />
                        <span t-field="move.product_uom" />
                    </td>
                </tr>
                <t t-if="move.product_id.material">
                    <tr>
                        <td><span>Materials:</span>
                            <t t-if="len(move.product_id.material) > 1">
                                <t t-foreach="move.product_id.material" t-as="m">
                                    <span t-field="m.name" />,
                                </t>
                            </t>
                            <t t-else="">
                                <t t-foreach="move.product_id.material" t-as="m">
                                    <span t-field="m.name" />
                                </t>
                            </t>
                        </td>
                        <td />
                    </tr>
                </t>
            </t>
        </xpath>

    </template>
</odoo>
