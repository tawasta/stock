<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_invoice_wizard_form" model="ir.ui.view">
        <field name="name">Invoice Pickings</field>
        <field name="model">stock.picking.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create invoice">

                <group>
                    <field name="partner_id" />
                    <field name="pricelist_id" />
                    <field name="existing_invoice_id"
                           options="{'no_open': True, 'no_create': True}"
                           domain="[('partner_id', '=', partner_id), ('state', '=', 'draft'), ('move_type', '=', 'out_invoice')]"
                           />
                    <field name="group_lines" />
                </group>

                <footer>
                    <button string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="action_create_invoice"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_multiple" model="ir.actions.act_window">
        <field name="name">Create invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
