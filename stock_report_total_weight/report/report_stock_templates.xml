<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- DELIVERY SLIP / DELIVERY DOCUMENT / PACKING LIST -->
    <template
        id="report_delivery_document_total_weight"
        inherit_id="stock_dispatch_note_report_template.report_delivery_document"
        priority="200"
    >
        <xpath expr="//th[@id='th_sm_weight']//strong" position="replace">
            <strong>Total Weight</strong>
        </xpath>
        <xpath expr="//th[@id='th_sml_weight']//strong" position="replace">
            <strong>Total Weight</strong>
        </xpath>
        <xpath expr="//th[@id='th_sm_weight']" position="before">
            <th name="th_sm_unit_weight">
                <strong>Weight</strong>
            </th>
        </xpath>
        <xpath expr="//th[@id='th_sml_weight']" position="before">
            <th name="th_sml_unit_weight">
                <strong>Weight</strong>
            </th>
        </xpath>
        <xpath expr="//td[@name='move_weight']" position="before">
            <td name="td_product_weight">
                <span t-field="move.product_id.weight" /> <span
                    t-field="move.product_id.weight_uom_name"
                />
            </td>
        </xpath>
    </template>
    <template
        id="stock_report_delivery_aggregated_move_lines_total_weight"
        inherit_id="stock_dispatch_note_report_template.stock_report_delivery_aggregated_move_lines"
    >
        <td name="move_line_aggregated_weight" position="before">
            <td name="move_line_product_weight">
                <span t-esc="aggregated_lines[line]['product'].weight" />
                <span t-esc="aggregated_lines[line]['product'].weight_uom_name" />
            </td>
        </td>
    </template>
</odoo>
