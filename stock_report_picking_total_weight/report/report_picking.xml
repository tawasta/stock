<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <xpath expr="//th[@name='th_barcode']" position="before">
            <th name="th_weight">
                <strong>Weight</strong>
            </th>
            <th name="th_total_weight">
                <strong>Total Weight</strong>
            </th>
        </xpath>
        <xpath expr="//td[@t-if='has_barcode']" position="before">
            <td name="td_product_weight">
                <span t-field="move.product_id.weight" />
                <span
                    t-field="move.product_id.weight_uom_name"
                    groups="uom.group_uom"
                />
            </td>
            <td name="td_total_weight">
                <span t-field="move.weight" />
                <span
                    t-field="move.product_id.weight_uom_name"
                    groups="uom.group_uom"
                />
            </td>
        </xpath>
    </template>
</odoo>
