<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <th name="th_product" position="before">
            <th id="th_product_code">
                <strong>Product Code</strong>
            </th>
        </th>

        <xpath
            expr="//span[@t-field='ml.product_id.display_name']/.."
            position="before"
        >
            <td id="td_product_code">
                <span t-field="ml.product_id.default_code" />
            </td>
        </xpath>
    </template>
</odoo>
