<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr='//table[@t-if="o.move_line_ids and o.state==&apos;done&apos;"]//th[@class="text-center"]' position="before">
            <t t-if="o.sale_id">
                <th class="text-center"><strong>Ordered Qty</strong></th>
            </t>
        </xpath>

        <xpath expr="//span[@t-field='move_line.qty_done']/.." position="before">
            <t t-if="move_line.move_id.sale_line_id">
                <td class="text-center">
                    <span t-field="move_line.move_id.sale_line_id.product_uom_qty" id="sale_line_id_qty"/>
                    <span t-field="move_line.product_uom_id"/>
                </td>
            </t>
        </xpath>
    </template>
</odoo>
