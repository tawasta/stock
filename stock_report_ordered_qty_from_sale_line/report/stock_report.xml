<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath
            expr='//table[@t-if="o.move_line_ids and o.state==&apos;done&apos;"]//th[@class="text-center"]'
            position="before"
        >
            <t t-if="o.sale_id">
                <th class="text-center"><strong>Ordered Qty</strong></th>
            </t>
        </xpath>
    </template>

    <template
        id="stock_report_delivery_aggregated_move_lines"
        inherit_id="stock.stock_report_delivery_aggregated_move_lines"
    >
        <td name="move_line_aggregated_qty_done" position="before">
            <t t-if="o.sale_id">
                <td name="move_line_aggregated_sale_line_qty">
                    <span
                        t-esc="aggregated_lines[line]['sale_line_qty']"
                        t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"
                    />
                    <span t-esc="aggregated_lines[line]['product_uom']" />
                </td>
            </t>
        </td>
    </template>
</odoo>
