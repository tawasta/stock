<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock_report_element_sizes.report_delivery_document"
    >
        <div id="stock_deliveryslip_informations" position="inside">
            <div
                t-if="o.sale_id.delivery_term_id or o.sale_id.delivery_place"
                class="col-auto mw-100 mb-2"
            >
                <span><strong>TERMS OF DELIVERY:</strong></span>
                <p class="m-0">
                    <t t-if="o.sale_id.delivery_term_id">
                        <span t-field="o.sale_id.delivery_term_id.name" />
                    </t>
                    <t t-if="o.sale_id.delivery_place">
                        <span t-field="o.sale_id.delivery_place" />
                    </t>
                </p>
            </div>
        </div>
    </template>
</odoo>
