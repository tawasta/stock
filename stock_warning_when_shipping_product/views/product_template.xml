<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">product.show.warning.when.shipping</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <group name="description" position="after">
                <group
                    string="Warning when Shipping this Product"
                    groups="sale.group_warning_sale"
                >
                    <field name="stock_line_warn" nolabel="1" />
                    <field
                        name="stock_line_warn_msg"
                        colspan="3"
                        nolabel="1"
                        attrs="{'required':[('stock_line_warn','!=','no-message')],'readonly':[('stock_line_warn','=','no-message')], 'invisible':[('stock_line_warn','=','no-message')]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
