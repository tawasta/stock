<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking" inherit_id="stock.report_picking">
        <div class="page" position="before">
            <t t-if="o.picking_type_id.code != 'incoming'">
                <div
                    style="float:left; padding-right: 20px;"
                    class="col-6"
                    id="invoice_address"
                >
                    <strong>INVOICE ADDRESS:</strong>
                    <t t-if="o.sudo().sale_id.partner_invoice_id">
                        <div
                            t-field="o.sudo().sale_id.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                        />
                    </t>
                </div>

                <div style="float:left;" class="col-5" id="invoice_address">
                    <strong>DELIVERY ADDRESS:</strong>
                    <div
                        t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                    />
                </div>
            </t>
        </div>

        <div name="div_outgoing_address" position="attributes">
            <attribute name="t-if">1 == 0</attribute>
        </div>

        <div name="div_incoming_address" position="attributes">
            <attribute name="t-if">o.picking_type_id.code=='incoming'</attribute>
        </div>
    </template>
</odoo>
