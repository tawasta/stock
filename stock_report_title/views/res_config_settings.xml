<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.view.form.report.delivery.slip.text</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="warning_info" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="delivery_slip_title">
                    <div class="o_setting_right_pane">
                        <label for="delivery_slip_title" />
                        <div class="text-muted">
                            Set title for Delivery Slip print. Default is 'Delivery Slip'
                        </div>
                        <field name="delivery_slip_title" />
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="show_delivery_slip_text">
                    <div class="o_setting_left_pane">
                        <field name="show_delivery_slip_text" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_delivery_slip_text" />
                        <div class="text-muted">
                            Show 'Delivery Slip' text on report
                        </div>
                    </div>
                </div>

                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="show_delivery_slip_report_name"
                >
                    <div class="o_setting_left_pane">
                        <field name="show_delivery_slip_report_name" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_delivery_slip_report_name" />
                        <div class="text-muted">
                            Show picking's name on Delivery Slip report
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="show_picking_text">
                    <div class="o_setting_left_pane">
                        <field name="show_picking_text" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_picking_text" />
                        <div class="text-muted">
                            Show 'Stock Picking' text on report
                        </div>
                    </div>
                </div>
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="show_picking_report_name"
                >
                    <div class="o_setting_left_pane">
                        <field name="show_picking_report_name" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_picking_report_name" />
                        <div class="text-muted">
                            Show picking's name on Stock Picking report
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
