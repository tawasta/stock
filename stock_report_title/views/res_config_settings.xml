<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.view.form.report.delivery.slip.text</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="warning_info" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="show_delivery_slip_text">
                    <div class="o_setting_left_pane">
                        <field name="show_delivery_slip_text" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_delivery_slip_text" />
                        <div class="text-muted">
                            Show 'Delivery Slip' text on pdf print
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
