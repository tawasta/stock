<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="vpicktree" model="ir.ui.view">
        <field name="name">stock.picking.tree.printed</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="picking_printed" optional="show" />
            </field>
        </field>
    </record>

    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.printed</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <filter name="cancel" position="after">
                <separator />
                <filter
                    name="picking_printed"
                    string="Picking printed"
                    domain="[('picking_printed','!=', False)]"
                />
                <filter
                    name="picking_not_printed"
                    string="Picking not printed"
                    domain="[('picking_printed','=', False)]"
                />
            </filter>
        </field>
    </record>

    <record id="view_picking_form_printed" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="date_done" position="after">
                <field
                    name="picking_printed"
                    attrs="{'invisible': [('picking_printed', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
