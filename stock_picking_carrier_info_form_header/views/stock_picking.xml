<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="name">delivery.stock.picking_withcarrier.form.view.header</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form" />
        <field name="arch" type="xml">
            <field name="carrier_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <label for="carrier_tracking_ref" position="attributes">
                <attribute name="invisible">1</attribute>
            </label>
            <div name="tracking" position="attributes">
                <attribute name="invisible">1</attribute>
            </div>
        </field>
    </record>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.carrier</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="location_id" position="after">
                <field name="delivery_type" attrs="{'invisible':True}" />
                <field name="carrier_id" />
                <label for="carrier_tracking_ref" />
                <div name="tracking">
                    <field
                        name="carrier_tracking_ref"
                        class="oe_inline"
                        attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"
                    />
                    <button
                        type='object'
                        class="fa fa-arrow-right oe_link"
                        name="cancel_shipment"
                        string="Cancel"
                        attrs="{'invisible':['|','|','|',('carrier_tracking_ref','=',False),('delivery_type','in', ['fixed', 'base_on_rule']),('delivery_type','=',False),('state','not in',('done'))]}"
                    />
                </div>
            </field>
        </field>
    </record>
</odoo>
