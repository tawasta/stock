<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_delivery_document_client"
        inherit_id="sale_stock.report_delivery_document_inherit_sale_stock"
    >
        <xpath expr="//div[@class='row justify-content-end']" position="attributes">
            <attribute name="t-if">1 == 0</attribute>
        </xpath>
    </template>
    <template
        id="report_delivery_document"
        inherit_id="stock_report_invoice_and_delivery_address.report_delivery_document"
    >
        <xpath expr="//div[@id='invoice_address']/t" position="after">
            <div
                id="address_customer_reference"
                style="float:left; padding-right: 20px;"
            >
                <t t-if="not o.from_purchase_order and o.customer_reference">
                    <span>Customer reference: </span><span
                        t-field="o.customer_reference"
                    />
                </t>
            </div>
        </xpath>
    </template>
</odoo>
