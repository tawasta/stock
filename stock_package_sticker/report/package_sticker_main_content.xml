<!--                 </h3> -->
<!--             </t> -->
<!--         </div> -->

        <div class="row">
            <t t-if="doc.origin">
                <h2>
                    <strong>Order number / Markings:</strong>
                </h2>
            </t>
        </div>

        <div class="row">
            <t t-if="doc.origin">
                <h3>
                    <div
                        t-field="doc.origin"
                        id="origin-area"
                        style="margin-bottom: 25px; font-size: 140%;"
                    />
                </h3>
            </t>
        </div>
    </template>
</odoo>
