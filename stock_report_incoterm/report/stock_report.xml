<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_picking_incoterm"
        inherit_id="stock_report_element_sizes.report_picking_element_sizes"
    >
        <div id="stock_picking_informations" position="inside">
            <div
                t-if="o.sudo().sale_id.incoterm"
                class="col-auto mw-100 mb-2"
                name="incoterm"
            >
                <span>
                    <strong>Incoterm:</strong>
                </span>
                <p class="m-0" t-field="o.sudo().sale_id.incoterm.code" />
            </div>
        </div>
    </template>
</odoo>
