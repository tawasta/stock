<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock_report_element_sizes.report_delivery_document"
    >
        <thead id="header_table_thead" position="inside">
            <t t-if="o.sudo().sale_id and o.sudo().sale_id.payment_term_id">
                <th name="td_payment_term">
                    <strong>Payment term</strong>
                </th>
            </t>
        </thead>

        <tbody id="header_table_tbody" position="inside">
            <t t-if="o.sudo().sale_id and o.sudo().sale_id.payment_term_id">
                <td name="td_payment_term">
                    <t t-esc="o.sudo().sale_id.payment_term_id.name" />
                </td>
            </t>
        </tbody>
    </template>
</odoo>
