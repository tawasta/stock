<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_picking_scheduled_date" inherit_id="stock.report_picking">
        <xpath expr="//p[@t-field='o.scheduled_date']" position="attributes">
            <attribute name="t-options">{'widget': 'date'}</attribute>
        </xpath>
    </template>
    <template
        id="report_delivery_document_scheduled_date"
        inherit_id="stock.report_delivery_document"
    >
        <xpath expr="//p[@t-field='o.scheduled_date']" position="attributes">
            <attribute name="t-options">{'widget': 'date'}</attribute>
        </xpath>
        <xpath expr="//p[@t-field='o.date_done']" position="attributes">
            <attribute name="t-options">{'widget': 'date'}</attribute>
        </xpath>
    </template>
</odoo>
