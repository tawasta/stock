<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.helper</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="warning_helper" invisible="1"/>
            </field>

            <button name="do_new_transfer" position="after">
                <button name="show_warning_if_picking_has_so_and_po" string="Validate" type="object" class="oe_highlight"
                    attrs="{'invisible':['|',('warning_helper','=',False),('state', 'not in', ['draft', 'partially_available', 'assigned'])]}"
                    />
            </button>

            <button name="do_new_transfer" position="attributes">
                <attribute name="attrs">{'invisible':['|',('warning_helper','=',True),('state', 'not in', ['draft', 'partially_available', 'assigned'])]}</attribute>
                <attribute name="states"></attribute>
            </button>
        </field>
    </record>
</odoo>
