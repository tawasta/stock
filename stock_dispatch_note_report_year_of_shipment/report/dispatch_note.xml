<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_dispatch_note" inherit_id="stock_dispatch_note_report.report_dispatch_note">
        <xpath expr="//th[@name='td_sched_date_h']" position="after">
            <t t-if="doc.sudo().sale_id and doc.sudo().sale_id.year_of_shipment">
                <th name="td_year_of_shipment">
                    <strong>Year of shipment</strong>
                </th>
            </t>
        </xpath>

        <xpath expr="//td[@name='td_sched_date']" position="after">
            <t t-if="doc.sudo().sale_id and doc.sudo().sale_id.year_of_shipment">
                <td name="td_year_of_shipment">
                    <span t-field="doc.sudo().sale_id.year_of_shipment"/>
                </td>
            </t>
        </xpath>
    </template>
</odoo>
