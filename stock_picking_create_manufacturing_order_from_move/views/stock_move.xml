<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_move_picking_form" model="ir.ui.view">
        <field name="name">stock.move.form.manufacturing.order</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='procure_method']/../.." position="before">
                <group name="manufacturing_order">
                    <group string="Manufacturing Order">
                        <field name="manufacturing_order_id"/>
                        <field name="mo_state"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
