<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.show.name</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='move_ids_without_package']//tree//field[@name='product_uom']"
                position="after"
            >
                <button
                    name="create_and_validate_manufacturing_order"
                    type="object"
                    string="Produce product"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', '|',
                           ('has_bom', '=', False),
                           ('state', 'in', ('draft', 'cancel', 'assigned', 'done')),
                           ('mo_has_been_created', '=', True)]}"
                />
                <field name="has_bom" invisible="1" />
                <field name="mo_has_been_created" invisible="1" />
                <field name="manufacturing_order_id" />
            </xpath>

            <xpath
                expr="//field[@name='move_ids_without_package']//form//field[@name='description_picking']/.."
                position="after"
            >
                <group name="manufacturing_order">
                    <group string="Manufacturing Order">
                        <field name="manufacturing_order_id" />
                        <field name="mo_state" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
