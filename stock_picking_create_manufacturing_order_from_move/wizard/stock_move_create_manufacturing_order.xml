<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_move_create_manufacturing_order_wizard" model="ir.ui.view">
        <field name="model">stock.move.create.manufacturing.order</field>
        <field name="arch" type="xml">
            <form id="create_manufacturing_order_form">
                <div id="create_manufacturing_order">
                    <group>
                        <button
                            type="object"
                            name="create_manufacturing_orders"
                            string="Create Manufacturing orders"
                            class="oe_highlight"
                        />
                        <group>
                            <separator />
                        </group>
                        <button special="cancel" string="Cancel" />
                    </group>
                </div>
                <footer />
            </form>
        </field>
    </record>

    <record id="action_create_multiple_mo_orders" model="ir.actions.act_window">
        <field name="name">Create Manufacturing Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.move.create.manufacturing.order</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="stock.model_stock_picking" />
    </record>
</odoo>
