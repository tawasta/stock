<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="stock_move_create_manufacturing_order_wizard" model="ir.ui.view">
        <field name="name">stock.move.create.manufacturing.order.form</field>
        <field name="model">stock.move.create.manufacturing.order</field>
        <field name="arch" type="xml">
            <form id="create_manufacturing_order_form">
                <div id="create_manufacturing_order">
                    <group>
                    <button type="object"
                        name="create_manufacturing_orders"
                        string="Create Manufacturing orders"
                        class="oe_highlight"/>
                    <group>
                        <separator/>
                    </group>
                    <button special="cancel" string="Cancel"/>
                    </group>
                </div>
                <footer/>
            </form>
        </field>
    </record>

    <act_window id="action_create_multiple_mo_orders"
                multi="True"
                key2="client_action_multi" name="Create Manufacturing Order"
                res_model="stock.move.create.manufacturing.order" src_model="stock.picking"
                view_mode="form" target="new" view_type="form"/>
</odoo>
