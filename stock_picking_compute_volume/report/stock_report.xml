<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock_dispatch_note_report_template.report_delivery_document"
    >
        <div id="stock_picking_weight" position="after">
            <div id="stock_picking_compute_volume" class="container">
                <strong>Volume:</strong>
                <span
                    t-field="o.total_compute_volume"
                    t-options="{'decimal_precision': 'Volume'}"
                />
                <span t-field="o.volume_uom_name" />
            </div>
        </div>
    </template>

    <template id="report_picking" inherit_id="stock.report_picking">
        <t t-set="no_reserved_product" position="before">
            <div id="stock_picking_compute_volume" class="container">
                <strong>Volume:</strong>
                <span
                    t-field="o.total_compute_volume"
                    t-options="{'decimal_precision': 'Volume'}"
                />
                <span t-field="o.volume_uom_name" />
            </div>
        </t>
    </template>
</odoo>
