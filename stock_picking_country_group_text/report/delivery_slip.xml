<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template
        id="delivery_slip_country_group_report"
        inherit_id="stock.report_delivery_document"
    >
        <div name="signature" position="after">
            <t
                t-foreach="o.partner_id.country_id.country_group_ids"
                t-as="country_group"
            >
                <br />
                <span t-field="country_group.delivery_slip_text" />
            </t>
        </div>
    </template>
</odoo>
